<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.slideshow.SlideshowFragment" >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add aids"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_enabled"
        android:layout_margin="@dimen/_10sdp"/>

    <Spinner
        android:visibility="gone"
        android:id="@+id/categorySpinner"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"

        android:layout_marginTop="@dimen/_2sdp" />

    <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
        android:visibility="gone"
        android:id="@+id/multipleItemSelectionSpinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_10sdp"
        app:hintText="Multi Item Selection" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addAidsToDatabase"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Update database"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_enabled"
        android:layout_margin="@dimen/_10sdp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.appcompat.widget.LinearLayoutCompat>